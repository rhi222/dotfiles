{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(gh pr diff:*)",
      "Bash(git remote show:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm test:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(psql:*)",
      "Bash(rm -rf:*)",
      "Bash(ssh:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(id_rsa)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/notify-windows.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/notify-windows.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "tmux",
  "enabledPlugins": {
    "cdk@forcia-claude-marketplace": true,
    "commit-commands@forcia-claude-marketplace": true,
    "domain-model@forcia-claude-marketplace": true,
    "superpowers@claude-plugins-official": true,
    "typescript@forcia-claude-marketplace": true
  },
  "language": "Japanese",
  "plansDirectory": "./plans"
}
