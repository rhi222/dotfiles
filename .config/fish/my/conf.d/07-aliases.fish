# Aliases

# Git
alias cdrr "cd (git rev-parse --show-toplevel)"
alias gu gitui

# Terminal & Tools
alias tmux 'tmux -2' # open tmux in 256color
alias vi nvim
alias view 'nvim -R'
alias rf 'source ~/.config/fish/config.fish' # reload fish config

# SSH
alias sshe 'cocot -t UTF-8 -p EUC-JP -- ssh' # EUC-JP端末へのアクセス
